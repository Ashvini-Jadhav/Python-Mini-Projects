import random

def play_game():
    choices = ["rock", "paper", "scissors"]
    user_score = 0
    computer_score = 0

    name = input("Enter your name: ")
    rounds = int(input("How many rounds do you want to play? "))

    print("\nðŸŽ® Rock Paper Scissors Game Started!")
    print("----------------------------------")

    for round_no in range(1, rounds + 1):
        print(f"\nRound {round_no}")

        user_choice = input("Choose rock, paper, or scissors: ").lower()

        if user_choice not in choices:
            print("âŒ Invalid choice! Round skipped.")
            continue

        computer_choice = random.choice(choices)

        print(f"Computer chose: {computer_choice}")

        if user_choice == computer_choice:
            print("ðŸ¤ It's a tie!")
        elif (
            (user_choice == "rock" and computer_choice == "scissors") or
            (user_choice == "scissors" and computer_choice == "paper") or
            (user_choice == "paper" and computer_choice == "rock")
        ):
            print("âœ… You win this round!")
            user_score += 1
        else:
            print("âŒ Computer wins this round!")
            computer_score += 1

        print(f"Score â†’ {name}: {user_score} | Computer: {computer_score}")

    print("\nðŸ Game Over")
    if user_score > computer_score:
        print(f"ðŸŽ‰ Congratulations {name}, You Won the Game!")
    elif user_score < computer_score:
        print("ðŸ’» Computer Won the Game!")
    else:
        print("ðŸ¤ The Game is a Tie!")


while True:
    play_game()
    again = input("\nDo you want to play again? (yes/no): ").lower()
    if again != "yes":
        print("Thanks for playing ðŸ˜Š")
        break
